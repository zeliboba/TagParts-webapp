<h1>Listing parts</h1>
<h2> total <%= @parts.count %> </h2>

<% @parts.each do |part| %>
  <hr width="50%" align="left"> <!-- FIXME: attributse are deprecated -->
    <div>
      <%= raw part.headline %>
    </div>
    <div>
      Tags:
      <% part.tags.each do |tag| %>
      <i><%= tag.word %></i>
      <% end %>
      <% if part.note %>
      (with note)
      <% end %>
    </div>
    <div>
    <%= link_to 'Show', part %>
    <%= link_to 'Edit', edit_part_path(part) %>
    <%= link_to 'Destroy', part, :confirm => 'Are you sure?', :method => :delete %>
    </div>
<% end %>

<br />
