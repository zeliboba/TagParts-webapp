<h1>Listing tags</h1>
<h2> total <%= @tags.count %>, sorted by word </h2>

<table>
  <tr>
    <th>Word</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= render tag %></td>
    <td><%= tag.category.name if ! tag.category.blank? %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tag', new_tag_path %>
<%= link_to 'Categories', categories_path %>
